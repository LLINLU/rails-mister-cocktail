<div class = "container mt-5">
<h1>Cocktails</h1>
<%= form_tag cocktails_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Find yours" %>
  </p>
<% end %>
<% @cocktails.each do |cocktail| %>
  <p><%= cocktail.name %></p>
  <%= link_to 'See details', cocktail, class: "btn btn-primary" %>
<% end %>

</div>
